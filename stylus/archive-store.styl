.link
// color: $highlight-dark
.date
  medium-voice()
  margin-top: $pad
  background: $gray
  color: $white
  padding: $pad*.5 $pad
  display: inline-block
.location
  // this should be obvious based on the venue site... but there may be multiple

.times
  // background: $gray-lighter
  color: $gray
  padding: $pad*.5 0
.time-list
  display: flex
  flex-direction: row
  flex-wrap: wrap
  .time
    //
    &:not(:last-of-type)
      margin-right: $pad
  // &:not(:first-of-type)
  // 	margin-left: $pad
  .doors
    span
      &:before
        content: 'Doors at '
  .start
    span
      &:before
        content: 'Starts at '
  .end
    span
      &:before
        content: 'Ends at '
.age-restriction
  //
  .message
    display: inline-block
    background: $gray-lighter
    color: $gray
    padding: $pad*.5 $pad
  .twentyone-and-up
    background: $highlight-dark
    color: $highlight-light
  .eighteen-and-up
    background: $black
    color: $gray
.custom
  //

.more-info
  padding: $pad 0
  .link
    color: $gray
    basic-transition()
    &:hover
      color: $color
.ticketing
  //
  display: flex
  flex-direction: column
.link
  align-self: flex-start
.price-range
  margin-top: $pad
  @media $break-point-1
    text-align: center

.event
&.sold-out
// border: 1px solid red
&.active
// border: 1px solid green

.status
  display: inline-block
  padding: $pad $pad*2
  min-width: 160px
  text-align: center
  align-self: flex-start
  @media $break-point-1
    align-self: center
  strong-voice()
