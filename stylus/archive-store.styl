// $variables
// ================

// $colors
$black = #111
$white = #efefef

$gray = #999
$gray-light = lighten($gray, 50%)
$gray-lighter = lighten($gray-light, 30%)
$gray-dark = darken($gray, 60%)

$color = lightgreen
$color-light = lighten($color, 30%)
$color-dark = darken($color, 30%)

$highlight = pink
$highlight-light = lighten($highlight, 30%)
$highlight-dark = darken($highlight, 30%)

$alternate = wheat
$alternate-light = lighten($alternate, 30%)
$alternate-dark = darken($alternate, 14%)

// $space
$pad = 10px
$thin = 1px
$thick = 4px
$corner = 6px

// $break-points
$break-point-1 = 'screen and (min-width: 700px)'
$break-point-2 = 'screen and (min-width: 1000px)'

// $font
body-font()
  font-family: 'Roboto Mono', monospace;

heading-font()
  font-family: 'Rubik', sans-serif;

// $font-style
uppercase()
  text-transform: uppercase
italic()
  font-style: italic

// $voice
whisper-voice()
  font-size: 8px

quite-voice()
  font-size: 12px

small-voice()
  font-size: 14px
  line-height: 1.3

standard-voice()
  font-size: 16px
  line-height: 1.3
  strong
    font-weight: 700
  em
    font-style: italic

medium-voice()
  headline-font()
  font-size: 16px
  font-weight: 700
  letter-spacing: .05em
  uppercase()

strong-voice()
  headline-font()
  font-size: 20px
  font-weight: 700
  letter-spacing: .05em
  uppercase()

loud-voice()
  font-size: 30px

// $mixins
responsive-image-wrapper()
  //
  img // probably just make this global setup
    display: block
    width: 100%
    height: auto

basic-transition()
  transition: .6s
  &:hover
    transition: 0s

// $box-model
html // https://www.paulirish.com/2012/box-sizing-border-box-ftw/
  box-sizing: border-box
  *, *:before, *:after
    box-sizing: inherit

a // $setup
  text-decoration: none
  color: inherit

figure
  margin: 0
  responsive-image-wrapper()

// $cursor-reset // https://gist.github.com/murtaugh/5247154
html,
body
  cursor: default
code
  cursor: text
a,
label,
button,
input[type='radio'],
input[type='submit'],
input[type='checkbox'],
input[type='button']
  cursor: pointer

button[disabled],
input[disabled]
  cursor: default



// $style
body
  background: rgba(0,0,0,.04)
  padding: $pad
  font-family: 'helvetica'
  body-font()
  standard-voice()
  background: $gray-dark

a
  display: block // is this reasonable can't tell yet?
p //
  a //
    display: inline-block

.events
  max-width: 1300px
  margin: 0 auto // center

.event-list
  // border: 3px solid blue
  // padding: $pad

.event
  display: flex
  flex-direction: column
  color: alpha($white, .8)
  // LOTS of ways 'grid' would be helpful here too! (But it wasn't out yet)
  @media $break-point-1
    flex-direction: row
    flex-wrap: wrap
  &:not(:first-of-type)
    margin-top: $pad*8
  .promotional-media
    // border: 2px solid lime
    @media $break-point-1
      flex-basis: 70%
      order: 1
    @media $break-point-2
      flex-basis: 25%
      order: 1
  .details
    // border: 2px solid red
    @media $break-point-1
      flex-basis: 100%
      order: 3
    @media $break-point-2
      flex-basis: 50%
      order: 2
      padding-left: $pad*2
  .call-to-action
    // border: 2px solid purple
    @media $break-point-1
      width: 30%
      order: 2
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      padding: $pad
    @media $break-point-2
      flex-basis: 25%
      order: 3
      justify-content: flex-start

  .poster-link
    display: block
    overflow: hidden
    border-bottom: $thick solid $black
    figure
      transition: .2s
    &:hover
      figure
        transform: scale(1.1)
  .emergency-notice
    padding: $pad*.5 $pad
    background: $highlight-dark
    color: $highlight-light
  .topline-info // this has to have a better name...
    padding: $pad*.5
    small-voice()
    italic()
    background: $gray-dark
    color: $gray
    border-bottom: $thick solid $black
  .title
    //
    .copy
      display: inline-block
      padding: $pad
      strong-voice()
      background: $gray-lighter
      color: $gray-dark
  .acts // probably a better name...
    //
  .act-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
  .act
    padding: 0
    .link
      padding: $pad*.5 0
      display: inline-block
      basic-transition()
      &:hover
        color: $color
    &:not(:last-of-type)
      span
        &:after
          display: inline-block
          content: ', '
          margin-right: $pad*.5
  .headliner-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    padding-top: $pad
  .headliner
    //
    &:not(:first-of-type)
      // margin-top: $pad
    &:nth-of-type(even)
      // opacity: .6
    &:not(:last-of-type)
      margin-right: $pad*.5
      margin-bottom: $pad*.5
      span
        &:after
          content: ''
    .link
      // why are these links? They don't really lead to information about this act... ?
      // should the entire list be one link instead?
      strong-voice()
      padding: $pad*.5 $pad
      background: black
      &:hover
        background: $color
        color: $black
  // background-color: $color
  // color: $color-dark

  .support-list
    // background: $highlight-light
  .support
