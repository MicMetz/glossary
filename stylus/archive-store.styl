// &.in-flux
// 	background: orange

.event
  //
  .status
    background: $gray-light
    color: $gray
    min-width: 180px
  // box-shadow: 0 $thick 0 0 $gray
  &.available
    .status
      background: $color
      color: $color-dark
      box-shadow: 0 $thick 0 0 $color-dark
      border-radius: $corner
      basic-transition()
      &:hover
        background: darken($color, 5%)
  &.not-available
    .status
      background: $gray
      color: $gray-dark
  // box-shadow: 0 $thick 0 0 $highlight-dark
  &.in-flux
    .status
      background: $alternate
      color: $alternate-dark
